<%- include('messages.ejs') %>
<form action="/password" method="POST" id="registerForm">

    <div class="form-outline mb-4">
        <input type="text" id="firstname" name="firstname"  class="form-control form-control-lg"
               pattern="[A-Za-z]{1,32}" title="name should only english contain letters" required/>
        <label class="form-label" for="firstname">Your First Name</label>
    </div>

    <div class="form-outline mb-4">
        <input type="text" id="lastname" name="lastname"  class="form-control form-control-lg"
               pattern="[A-Za-z]{1,32}" title="name should only english contain letters" required/>
        <label class="form-label" for="lastname">Your Last Name</label>
    </div>

    <div class="form-outline mb-4">
        <input type="text" id="email" name="email"  class="form-control form-control-lg"
               pattern="[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]{2,}$" title="email format required" required/>
        <label class="form-label" for="email">Your Email</label>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" value="submit" class="btn btn-success bg-dark text-white btn-lg gradient-custom-4">Register</button>
    </div>

</form>

<form action="/login" method="post">
    Already registered? <button type="submit" style="background: none; border: none; padding: 0; color: #0000EE">Sign in</button>
</form>

